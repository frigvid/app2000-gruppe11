{
	"compilerOptions": {
		"paths": {
			"@auth/*": ["./src/app/(auth)/*"],
			"@game/*": ["./src/app/(game)/*"],
			"@misc/*": ["./src/app/(misc)/*"],
			"@user/*": ["./src/app/(user)/*"],
			"@shared/*": ["./src/app/shared/*"],
			"@/*": [
				"./src/*"
			]
		},
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"target": "ES2022",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx"
	],
	"exclude": [
		"node_modules"
	]
}
